{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block content %}
<div >
    <table class="tableacceuil" >
            <tr>
                <td>
                    <input id="btnformulaire" class="tableacceuil bouton" type="Button" name="inscription" value="inscription">
                </td>
            </tr>
            <br />
            <tr>
                <td>
                    <input id="btnConnection"  class="tableacceuil bouton" type="Button" name="connection" value="connection"><br />
                </td>
            </tr>
            <br />
            <tr>
                <td>
                    <input  class="tableacceuil bouton" type="Button" name="mdp" value="mot de passe oublié"  data-toggle="modal" data-target="#exampleModal" >
                </td>
            </tr>
        </table>  
</div>



<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title " id="exampleModalLabel">Mot de passe oublié</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input class="mdpoubli" id="mail" type="email" name="mail" placeholder="adresse mail"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">fermer</button>
        <button type="button" id="btnRenvoieMdp" class="btn btn-danger">envoi</button>
    </div>
    </div>
</div>
</div>
{% endblock %}